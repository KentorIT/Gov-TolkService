@model UnitListModel
@{
    ViewData["Title"] = "Enheter";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    @await Html.PartialAsync("_Filter", Model.FilterModel)
</div>
<div class="row">
    <div class="col-md-12">
        <a class="btn btn-default btn-large pull-right" href="@Url.Action("Create")">Skapa enhet</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        @if (Model.Items.Any())
        {
            <div class="table-responsive table-paging table-datatable">
                <table class="table table-hover clickable-rows-with-action search-table">
                    <thead>
                        <tr>
                            <th>Namn</th>
                            <th>E-post</th>
                            <th>Skapad av</th>
                            <th>Skapad</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr data-id="@item.CustomerUnitId" data-click-action-url="@Url.Action("Edit", "SystemMessage", new { id = item.CustomerUnitId})">
                                <td class="gray-border-bottom @item.ColorClassName">@item.Name</td>
                                <td class="gray-border-bottom">@item.Email</td>
                                <td class="gray-border-bottom">@item.CreatedBy</td>
                                <td class="gray-border-bottom">@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <span class="no-result-message">
                Det finns inga upplagda enheter som du har tillgång till
            </span>
        }
    </div>
</div>
