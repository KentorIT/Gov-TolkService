@model InterpreterListModel
@using Tolk.Web.Services
@inject HelpLinkService HelpLinkService
@{
    ViewData["Title"] = "Tolkar";
    HelpLinkService.PageName = "Tolkar";
}
<h2>@ViewData["Title"] @HelpLinkService.HeaderAnchor()</h2>
@if (!string.IsNullOrEmpty(@Model.Message))
{
    <div class="row">
        <div class="col-xs-12">
            <br />
            <div class="system-action-info">
                <span class="glyphicon glyphicon-ok"></span>
                <span class="info-message">
                    @Model.Message
                </span>
            </div>
        </div>
    </div>
}
<div class="row">
    @await Html.PartialAsync("_Filter", Model.FilterModel)
</div>
<div class="row">
    <div class="col-md-12">
        <a class="btn btn-default btn-large pull-right" href="@Url.Action("Create")">Skapa tolk</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        @if (Model.Items.Any())
        {
            <div class="table-responsive standard-table table-paging table-datatable">
                <table class="table table-hover full-row-height clickable-rows-with-action search-table">
                    <thead>
                        <tr>
                            <th>Namn</th>
                            <th>Email</th>
                            <th>Tolk-ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr data-id="@item.Id" data-click-action-url="@Url.Action("View", new { id = item.Id })">
                                <td class="gray-border-bottom @item.ColorClassName">@item.Name @(item.IsActive ? "" : "(Inaktiv)")</td>
                                <td class="gray-border-bottom">@item.Email</td>
                                <td class="gray-border-bottom">@item.OfficialInterpreterId</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else if (Model.FilterModel.HasActiveFilters)
        {
            <span class="no-result-message">
                Sökningen gav inget resultat.
            </span>
        }
    </div>
</div>
