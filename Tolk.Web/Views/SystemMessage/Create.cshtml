@model Tolk.Web.Models.SystemMessageModel

@{
    ViewData["Title"] = "Skapa nyhet";
}
<form method="post">
    <div class="row">
        <div class="col-sm-12">
            <h2>@ViewData["Title"]</h2>
            @await Html.PartialAsync("_SystemMessage", Model)
            <div class="row">
                <div class="col-sm-12">
                    <a class="btn btn-large btn-warning pull-left do-not-check-dirty" asp-action="List">Avbryt <span class="btn-remove-times">&times;</span></a>
                    <button id="create" class="btn btn-large btn-success pull-right">Skapa nyhet</button>
                </div>
            </div>

        </div>
    </div>
</form>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
