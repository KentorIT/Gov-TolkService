@model Tolk.Web.Models.SystemMessageModel

@{
    ViewData["Title"] = "Ändra nyhet";
}
<section aria-label="@ViewData["Title"]">
    <div class="row">
        <div class="col-sm-12">
            <h1>@ViewData["Title"]</h1>
            <form method="post">
                @await Html.PartialAsync("_SystemMessage", Model)
                <div class="row">
                    <div class="col-sm-12">
                        <input asp-for="SystemMessageId" type="hidden" />
                        <a class="btn btn-large btn-warning pull-left do-not-check-dirty" asp-action="List">Avbryt <span class="btn-remove-times">&times;</span></a>
                        <button class="btn btn-large btn-success pull-right">Ändra nyhet</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
