@model Tolk.Web.Models.SystemMessageModel
@using Tolk.Web.Services
@using Tolk.BusinessLogic.Enums
@inject SelectListService SelectListService

<div class="row">
    <div class="col-sm-4">
        <form-entry asp-for="SystemMessageHeader" />
    </div>
    <div class="col-sm-8">
        <form-entry asp-for="SystemMessageText" />
    </div>
</div>
<div class="row">
    <div class="col-sm-4">
        <form-entry asp-for="DisplayDate" />
    </div>
    <div class="col-sm-4">
        <form-entry asp-for="DisplayedForUserTypeGroup" type="select" asp-items="SelectListService.SystemMessageUserTypeGroups" />
    </div>
    <div class="col-sm-4">
        <form-entry asp-for="SystemMessageType" asp-items="SelectListService.SystemMessageTypes" checked-value="@(Model == null ? SystemMessageType.Information.ToString() : Model.SystemMessageTypeValue.ToString())" />
    </div>
</div>
