@model EmailListModel
@using Tolk.Web.Services
@inject HelpLinkService HelpLinkService
@{
    ViewData["Title"] = "E-postmeddelanden";
    HelpLinkService.PageName = "admin-mail/";
}
<section aria-label="@ViewData["Title"]">
    <h1>@ViewData["Title"] @HelpLinkService.HeaderAnchor()</h1>
    <div class="row filter-panel">
        @await Html.PartialAsync("_Filter", Model.FilterModel)
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive ajax-listing table-datatable">
                <table class="table table-hover full-row-height clickable-rows-with-action search-table" data-order="[[ 1, &quot;desc&quot; ]]"
                       data-ajax-path="@Url.Action(nameof(Tolk.Web.Controllers.EmailController.ListEmails), "Email")"
                       data-ajax-column-definition="@Url.Action(nameof(Tolk.Web.Controllers.EmailController.ListColumnDefinition), "Email")"
                       data-click-action-url="@Url.Action(nameof(Tolk.Web.Controllers.EmailController.View), "Email")"
                       data-filter-selector=".filter-panel">
                </table>
            </div>
        </div>
    </div>
</section>