@model RegisterNewUserViewModel

@{
    ViewData["Title"] = "Ny användare";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-8">
        <form method="post" asp-action="RegisterNewUser" asp-controller="Account">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="PasswordToken" />
            <form-entry asp-for="NameFirst" />
            <form-entry asp-for="NameFamily" />
            <form-entry asp-for="NewPassword" />
            <form-entry asp-for="ConfirmPassword" />
            <form-entry asp-for="PhoneWork" />
            <form-entry asp-for="PhoneCellphone" />
            <button type="submit" class="btn btn-success">Skapa</button>
        </form>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
