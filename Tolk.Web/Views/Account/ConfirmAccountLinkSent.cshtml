@{
    ViewData["Title"] = "Registrera användarkonto";
}

<div class="row">
    <div class="col-md-4 login-page page-shadow">
        <div class="row">
            <div class="col-xs-12 padding-bottom-60px">
                <div class="row padding-bottom-30px">
                    <div class="col-xs-12">
                        <h2>@ViewData["Title"]</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <p>Kontrollera din e-post, du har fått en aktiveringslänk skickad.</p>
                    </div>
                </div>
                <div class="row padding-bottom-30px">
                    <div class="col-xs-12 text-align-center">
                        <h4>Skickat <span class="glyphicon glyphicon-ok"></span></h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 text-align-center">
                Har du redan ett konto?<br />
                Gå vidare till <a asp-action="Login">Logga in <span class="glyphicon glyphicon-triangle-right"></span></a>
            </div>
        </div>
    </div>
    <div class="col-md-8 welcome-info">
        @await Html.PartialAsync("_AppInfo")
    </div>
</div>