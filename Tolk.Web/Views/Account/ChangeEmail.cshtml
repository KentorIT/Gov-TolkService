@model ChangeEmailModel;
@{
    ViewData["Title"] = "Ändra E-postadress";
}
<h2>@ViewData["Title"]</h2>
<form method="post" class="do-not-check-dirty">
    <div class="row">
        <div class="col-sm-4">
            <form-entry asp-for="NewEmailAddress" />
            <form-entry asp-for="CurrentPassword" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <a class="btn btn-warning btn-large pull-left do-not-check-dirty" asp-action="Index">Avbryt <span class="btn-remove-times">&times;</span></a>
        </div>
        <div class="col-sm-4">
            <button type="submit" class="btn btn-success btn-large pull-right">Ändra E-postadress</button>
        </div>
    </div>
</form>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
