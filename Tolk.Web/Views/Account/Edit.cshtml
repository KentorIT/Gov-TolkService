@model ManageModel
@using System.Security.Claims
@{
    ViewData["Title"] = "Redigera konto";
}

<h2>@User.FindFirstValue(ClaimTypes.Name)</h2>

<div class="row">
    <div class="col-md-8">
        <form method="post" asp-action="Edit" asp-controller="Account">
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (Model.HasPassword)
            {
                <input type="hidden" asp-for="HasPassword" />
                <form-entry asp-for="NameFirst" />
                <form-entry asp-for="NameFamily" />
                <a class="btn btn-default" asp-action="ChangePassword">Byt lösenord</a>
                <form-entry asp-for="PhoneWork" />
                <form-entry asp-for="PhoneCellphone" />
                <form-entry asp-for="CurrentPassword" />
                <button type="submit" class="btn btn-success">Spara</button>
            }
            else
            {
                <p>
                    Du har inget befintligt lösenord, för att sätta ett lösenord behöver du
                    en återställningslänk som du får via e-post.
                </p>
                <button type="submit" class="btn btn-success">Skicka återställningslänk</button>
            }
        </form>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
