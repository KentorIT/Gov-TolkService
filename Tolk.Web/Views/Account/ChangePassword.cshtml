@model ChangePasswordModel;

@{
    ViewData["Title"] = "Ändra lösenord";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post" class="do-not-check-dirty">
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (Model.HasPassword)
            {
                <input type="hidden" asp-for="HasPassword" />
                <form-entry asp-for="CurrentPassword" />
                <form-entry asp-for="NewPassword" />
                <form-entry asp-for="ConfirmPassword" />
                <button type="submit" class="btn btn-success">Byt lösenord</button>
            }
            else
            {
                <p>
                    Du har inget befintligt lösenord, för att sätta ett lösenord behöver du
                    en återställningslänk som du får via e-post.
                </p>
                <button type="submit" class="btn btn-success">Skicka återställningslänk</button>
            }
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
