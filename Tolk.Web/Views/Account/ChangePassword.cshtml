@model ChangePasswordModel;

@{
    ViewData["Title"] = "Ändra lösenord";
}
<section aria-label="@ViewData[" Title"]">
    <h1>@ViewData["Title"]</h1>
    <form method="post" class="do-not-check-dirty">
        @if (Model.HasPassword)
        {
        <div class="row">
            <div class="col-sm-4">
                <input type="hidden" asp-for="HasPassword" />
                <form-entry asp-for="Email" class="neg-margin-top invisible" />
                <form-entry asp-for="CurrentPassword" />
                <form-entry asp-for="NewPassword" />
                <form-entry asp-for="ConfirmPassword" />
            </div>
            <div class="col-sm-4">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <a class="btn btn-warning btn-large pull-left do-not-check-dirty" asp-action="Index">Avbryt <span class="btn-remove-times">&times;</span></a>
            </div>
            <div class="col-sm-4">
                <button type="submit" class="btn btn-success btn-large pull-right">Ändra lösenord</button>
            </div>
        </div>
        }
        else
        {
        <div class="row">
            <div class="col-sm-8">
                Du har inget befintligt lösenord, för att sätta ett lösenord behöver du
                en återställningslänk som du får via e-post.<br /><br />
                <button type="submit" class="btn btn-primary btn-large">Skicka återställningslänk</button>
            </div>
        </div>
        }
    </form>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
