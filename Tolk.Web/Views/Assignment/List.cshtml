@model AssignmentListModel
@using Tolk.BusinessLogic.Utilities
@{
    ViewData["Title"] = "Tilldelade uppdrag";
}
    <section aria-label="@ViewData["Title"]">
        <h1>@ViewData["Title"]</h1>
        <div class="row filter-panel">
            @await Html.PartialAsync("_Filter", Model.FilterModel)
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive ajax-listing table-datatable">
                    <table class="table table-hover full-row-height clickable-rows-with-action search-table" data-order="[[ 1, &quot;desc&quot; ]]"
                           data-ajax-path="@Url.Action(nameof(Tolk.Web.Controllers.AssignmentController.ListAssignments), "Assignment")"
                           data-ajax-column-definition="@Url.Action(nameof(Tolk.Web.Controllers.RequestController.ListColumnDefinition), "Assignment")"
                           data-click-action-url="@Url.Action(nameof(Tolk.Web.Controllers.RequestController.View), "Assignment")"
                           data-filter-selector=".filter-panel">
                    </table>
                </div>
            </div>
        </div>

