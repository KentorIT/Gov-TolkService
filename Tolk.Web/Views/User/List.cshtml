@model UserListModel
@{
    ViewData["Title"] = "Användare";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    @await Html.PartialAsync("_Filter", Model.FilterModel)
</div>
<div class="row">
    <div class="col-md-12">
        <a class="btn pull-right" href="@Url.Action("Create")">Skapa användare</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        @if (Model.Items.Any())
        {
            <div class="table-responsive table-datatable">
                <table class="table table-striped table-hover clickable-rows-with-action">
                    <thead>
                        <tr>
                            <th>Namn</th>
                            <th>Email</th>
                            @if (Model.FilterModel.IsSystemAdministrator)
                            {
                                <th>Organisation</th>
                            }
                            <th>Senaste inloggning</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr data-id="@item.UserId" data-click-action-url="@Url.Action("View", new { id = item.UserId })">
                                <td>@item.Name @(item.IsActive ? "" : "(Inaktiv)")</td>
                                <td>@item.Email</td>
                                @if (Model.FilterModel.IsSystemAdministrator)
                                {
                                    <td>@item.Organisation</td>
                                }
                                <td>@item.LastLoginAt</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else if (Model.FilterModel.HasActiveFilters)
        {
            <span class="no-result-message">
                Sökningen gav inget resultat.
            </span>
        }
    </div>
</div>
