@model FaqListModel
@inject HelpLinkService HelpLinkService
@using Tolk.Web.Services
@{
    ViewData["Title"] = "Vanliga frågor & svar";
    HelpLinkService.PageName = Model.IsBroker ? "formedling-faq/" : "myndighet-faq/";
}
<section aria-label="@ViewData["Title"]">
    <h1>@ViewData["Title"] @HelpLinkService.HeaderAnchor()</h1>
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-xs-12">
                    <div class="table-responsive table-datatable">
                        <table class="table searchable-only-table full-row-height">
                            <thead>
                                <tr>
                                    <th data-sortable="false"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr class="faq-row">
                                        <td class="gray-border-list-element">
                                            <div class="faq-question">@item.Question</div>
                                            <div class="faq-answer">@item.Answer</div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
