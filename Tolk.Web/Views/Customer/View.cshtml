@model CustomerModel
@{
    ViewData["Title"] = "Detaljer för " + Model.Name;
}
<section aria-label="@ViewData["Title"]">
    <h1>@ViewData["Title"]</h1>
    @if (!string.IsNullOrEmpty(@Model.Message))
    {
        <div class="row">
            <div class="col-sm-12">
                <br />
                <div class="system-action-info">
                    <span class="glyphicon glyphicon-ok"></span>
                    <span role="status" class="info-message">
                        @Model.Message
                    </span>
                </div>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-sm-4">
            <display-entry asp-for="Name" />
        </div>
        <div class="col-sm-4">
            <display-entry asp-for="ParentName" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <display-entry asp-for="EmailDomain" />
        </div>
        <div class="col-sm-4">
            <display-entry asp-for="OrganizationPrefix" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            &nbsp;
        </div>
        <div class="col-sm-4">
            <display-entry asp-for="PriceListType" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <a class="btn btn-warning btn-large pull-left do-not-check-dirty" href="@Url.Action(nameof(Tolk.Web.Controllers.CustomerController.List))"><span class="center-glyphicon glyphicon glyphicon-triangle-left"></span> Tillbaka</a>
        </div>
        <div class="col-sm-4">
            <a class="btn btn-large btn-default" asp-action="@nameof(Tolk.Web.Controllers.CustomerController.Edit)" asp-route-id="@Model.CustomerId">Ändra</a>
        </div>
        <div class="col-sm-4">
            <a class="btn btn-large btn-warning" asp-controller="User" asp-action="@nameof(Tolk.Web.Controllers.UserController.Create)" asp-route-customerId="@Model.CustomerId" asp-route-bi="@Model.UserPageMode.BackId" asp-route-bc="@Model.UserPageMode.BackController" asp-route-ba="@Model.UserPageMode.BackAction">Skapa användare</a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="table-responsive ajax-listing table-datatable">
                <table class="table table-hover clickable-rows-with-action search-table" data-order="[[ 1, &quot;asc&quot; ]]"
                       data-ajax-path="Customer/@nameof(Tolk.Web.Controllers.CustomerController.ListUsers)/@Model.CustomerId"
                       data-ajax-column-definition="Customer/@nameof(Tolk.Web.Controllers.CustomerController.UserColumnDefinition)"
                       data-click-action-url="@Url.Action(nameof(Tolk.Web.Controllers.UserController.View), "User")">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Efternamn</th>
                            <th>Förnamn</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody />
                </table>
            </div>
        </div>
    </div>
</section>
