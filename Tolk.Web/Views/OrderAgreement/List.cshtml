@model OrderAgreementListModel
@using Tolk.Web.Services
@inject HelpLinkService HelpLinkService
@{
    ViewData["Title"] = "Order agreements";
    HelpLinkService.PageName = "admin-order-agreements/";
}
<section aria-label="@ViewData["Title"]">
    <h1>@ViewData["Title"] @HelpLinkService.HeaderAnchor()</h1>
    <div class="row filter-panel">
        @await Html.PartialAsync("_Filter", Model.FilterModel)
    </div>
    @if (Model.IsApplicationAdmin)
    {
        <div class="row">
            <div class="col-md-12">
                <form-entry asp-for="OrderNumber" />
                <a class="btn btn-default btn-large pull-right add-order-agreement">Skapa order agreement</a>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive ajax-listing table-datatable">
                <table class="table table-hover full-row-height clickable-rows-with-action search-table" data-order="[[ 3, &quot;desc&quot; ]]"
                       data-ajax-path="@Url.Action(nameof(Tolk.Web.Controllers.OrderAgreementController.ListOrderAgreements), "OrderAgreement")"
                       data-ajax-column-definition="@Url.Action(nameof(Tolk.Web.Controllers.OrderAgreementController.ListColumnDefinition), "OrderAgreement")"
                       data-click-action-url="@Url.Action(nameof(Tolk.Web.Controllers.OrderAgreementController.View), "OrderAgreement")"
                       data-filter-selector=".filter-panel">
                </table>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <environment include="Development">
        <script src="~/js/OrderAgreement/List.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/OrderAgreement/List.min.js" asp-append-version="true"></script>
    </environment>
}
