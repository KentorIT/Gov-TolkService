@model ComplaintListModel 
@using Tolk.BusinessLogic.Utilities
@{
    ViewData["Title"] = "Reklamationer";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    @await Html.PartialAsync("_Filter", Model.FilterModel)
</div>
<div class="row">
    <div class="col-md-12">
        @if (Model.Items.Any())
        {
            <div class="table-responsive table-paging table-datatable">
                <table class="table table-striped table-hover clickable-rows-with-action">
                    <thead>
                        <tr>
                            <th>AvropsID</th>
                            <th>Region</th>
                            <th>Myndighet</th>
                            <th>Förmedling</th>
                            <th>Skapad</th>
                            <th>Reklamationstyp</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr data-id="@item.ComplaintId" data-click-action-url="@Url.Action(item.Action, new { id = item.ComplaintId })">
                                <td>@item.OrderNumber</td>
                                <td>@item.RegionName</td>
                                <td>@item.CustomerName</td>
                                <td>@item.BrokerName</td>
                                <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@EnumHelper.GetDescription(item.ComplaintType)</td>
                                <td>@EnumHelper.GetDescription(item.Status)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else if (Model.FilterModel.HasActiveFilters)
        {
            <span class="no-result-message">
                Sökningen gav inget resultat.
            </span>
        }
    </div>
</div>
