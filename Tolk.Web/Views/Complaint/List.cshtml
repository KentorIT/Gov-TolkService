@model ComplaintListModel
@using Tolk.BusinessLogic.Utilities
@inject HelpLinkService HelpLinkService
@using Tolk.Web.Services
@{
    ViewData["Title"] = "Historik - Reklamationer";
    if (Model.FilterModel.IsBrokerUser)
    {
        HelpLinkService.PageName = "formedling-historik/";
    }
    else
    {
        HelpLinkService.PageName = "myndighet-historik/";
    }
}
<h2>@ViewData["Title"] @HelpLinkService.HeaderAnchor("historik-reklamationer")</h2>
<div class="row">
    @await Html.PartialAsync("_Filter", Model.FilterModel)
</div>
<div class="row">
    <div class="col-md-12">
        @if (Model.Items.Any())
        {
            <div class="table-responsive table-paging table-datatable">
                <table class="table table-hover clickable-rows-with-action search-table">
                    <thead>
                        <tr>
                            <th class="defaultSortDesc">BokningsID</th>
                            <th>Län</th>
                            <th>Myndighet</th>
                            <th>Förmedling</th>
                            <th>Skapad</th>
                            <th>Typ av reklamation</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr data-id="@item.OrderRequestId" data-click-action-url="@Url.Action("View", item.Controller, new { id = item.OrderRequestId, tab = "complaint"})">
                                <td class="gray-border-bottom @item.ColorClassName">@item.OrderNumber</td>
                                <td class="gray-border-bottom">@item.RegionName</td>
                                <td class="gray-border-bottom">@item.CustomerName</td>
                                <td class="gray-border-bottom">@item.BrokerName</td>
                                <td class="gray-border-bottom">@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td class="gray-border-bottom">@EnumHelper.GetDescription(item.ComplaintType)</td>
                                <td class="gray-border-bottom gray-border-right">@EnumHelper.GetDescription(item.Status)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else if (Model.FilterModel.HasActiveFilters)
        {
            <span class="no-result-message">
                Sökningen gav inget resultat.
            </span>
        }
    </div>
</div>
