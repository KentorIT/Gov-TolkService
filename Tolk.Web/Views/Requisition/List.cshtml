@model RequisitionListModel
@using Tolk.BusinessLogic.Utilities
@{
    ViewData["Title"] = "Historik - Rekvisitioner";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    @await Html.PartialAsync("_Filter", Model.FilterModel)
</div>
<div class="row">
    <div class="col-md-12">
        @if (Model.Items.Any())
        {
            <div class="table-responsive table-paging table-datatable ">
                <table class="table table-hover clickable-rows-with-action search-table table-order-col0-desc">
                    <thead>
                        <tr>
                            <th class="defaultSortDesc">BokningsID</th>
                            <th>Status</th>
                            <th>Språk</th>
                            <th>Datum för uppdrag</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr data-id="@item.OrderRequestId" data-click-action-url="@Url.Action("View", item.Controller, new { id = item.OrderRequestId, tab = "requisition" })">
                                <td class="gray-border-bottom @item.ColorClassName">@item.OrderNumber</td>
                                <td class="gray-border-bottom">@EnumHelper.GetDescription(item.Status)</td>
                                <td class="gray-border-bottom">@item.Language</td>
                                <td class="gray-border-bottom gray-border-right"><display-entry asp-for="@item.OrderDateAndTime" /></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else if (Model.FilterModel.HasActiveFilters)
        {
            <span class="no-result-message">
                Sökningen gav inget resultat.
            </span>
        }
    </div>
</div>
