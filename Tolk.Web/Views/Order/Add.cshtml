@model Tolk.Web.Models.OrderModel
@inject SelectListService SelectListService
@using Tolk.Web.Services
@{
    ViewData["Title"] = "Home Page";
}
@section Scripts
    {
    <environment include="Development">
        <script src="~/js/Order/Add.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/Order/add.min.js" asp-append-version="true"></script>
    </environment>
}
<div class="row">
    <div class="col-md-8">
        <h2>Avropa tolk</h2>
        <form asp-action="Add" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form-entry asp-for="RegionId" type="select" asp-items="SelectListService.Regions" />
            <form-entry asp-for="Language" type="select" asp-items="SelectListService.Languages" />
            <form-entry asp-for="CustomerReferenceNumber" />
            <form-entry asp-for="AssignentType" type="select" asp-items="SelectListService.AssignentTypes" />
            <form-entry asp-for="RequiredCompetenceLevel" type="select" asp-items="SelectListService.CompetenceLevels" />
            <label asp-for="StartDate"></label><br />
            <input asp-for="StartDate" /> - <input asp-for="StartTime" /><br />
            <label asp-for="EndDate"></label><br />
            <input asp-for="EndDate" /> - <input asp-for="EndTime" /><br />
            <form-entry asp-for="Description" />
            <form-entry asp-for="UnitName" />
            <form-entry asp-for="LocationStreet" />
            <form-entry asp-for="LocationZipCode" />
            <form-entry asp-for="LocationCity" />
            <input asp-for="AllowMoreThanTwoHoursTravelTime" /> <label asp-for="AllowMoreThanTwoHoursTravelTime"></label> <br />
            <div class="form-group" id="SpecialRequirementsText-wrapper">
                Här skall det tillkomma lite möjlighet att lägga till extra krav/önskemål
            </div>
            <button class="btn btn-default">Skicka</button>
        </form>
    </div>
</div>