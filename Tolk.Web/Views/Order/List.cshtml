@model IEnumerable<Tolk.Web.Models.OrderListItemModel>
@using Tolk.Web.Services
@{
    ViewData["Title"] = "Avrop";
}
<div class="row">
    <div class="col-md-8">
        <h2>@ViewData["Title"]</h2>
        <table class="table table-striped table-hover clickable-rows" data-click-controller="Order" data-click-action="Details" data-click-parameter="id">
            <thead>
                <tr>
                    <th>AvropsID</th>
                    <th>Region</th>
                    <th>Språk</th>
                    <th>Start</th>
                    <th>Slut</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr data-id="@item.OrderId">
                    <td>@item.OrderNumber</td>
                    <td>@item.RegionName</td>
                    <td>@item.Language</td>
                    <td>@item.Start.ToString("yyyy-MM-dd hh:mm")</td>
                    <td>@item.End.ToString("yyyy-MM-dd hh:mm")</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

