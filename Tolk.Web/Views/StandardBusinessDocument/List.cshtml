@model PeppolMessageListModel
@using Tolk.Web.Services
@inject HelpLinkService HelpLinkService
@{
    ViewData["Title"] = "Peppol Messages";
    HelpLinkService.PageName = "admin-order-agreements/"; // Needs update
}
<section aria-label="@ViewData["Title"]">
    <h1>@ViewData["Title"] @HelpLinkService.HeaderAnchor()</h1>
    <div class="row filter-panel">
        @await Html.PartialAsync("_Filter", Model.FilterModel)
    </div>   
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive ajax-listing table-datatable">
                <table class="table table-hover full-row-height clickable-rows-with-action search-table" data-order="[[ 3, &quot;desc&quot; ]]"
                       data-ajax-path="@Url.Action(nameof(Tolk.Web.Controllers.StandardBusinessDocumentController.ListPeppolMessages), "StandardBusinessDocument")"
                       data-ajax-column-definition="@Url.Action(nameof(Tolk.Web.Controllers.StandardBusinessDocumentController.ListColumnDefinition), "StandardBusinessDocument")"
                       data-click-action-url="@Url.Action(nameof(Tolk.Web.Controllers.StandardBusinessDocumentController.View), "StandardBusinessDocument")"
                       data-filter-selector=".filter-panel">
                </table>
            </div>
        </div>
    </div>
</section>