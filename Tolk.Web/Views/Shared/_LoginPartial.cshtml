@using Microsoft.AspNetCore.Identity
@using Tolk.BusinessLogic.Entities
@using System.Security.Claims
@using Tolk.Web.Authorization

@inject SignInManager<AspNetUser> SignInManager
@inject Tolk.Web.Services.SelectListService SelectListService

@if (SignInManager.IsSignedIn(User))
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a asp-area="" asp-controller="Account" asp-action="Index" title="Mitt Konto">
            @(User.FindFirstValue(TolkClaimTypes.ImpersonatingUserName) 
                ??User.FindFirstValue(ClaimTypes.Name))</a>
        </li>
        <li>
            @if (User.IsInRole(Roles.Impersonator))
            {
                <form id="impersonation-form" asp-area="" asp-controller="Account" asp-action="Impersonate" method="post" class="navbar-form navbar-right">
                    <div class="form-group">
                        <select name="UserId" id="impersonation-select" asp-items="SelectListService.ImpersonationList" class="form-control" style="width:200px"></select>
                    </div>
                </form>
            }
        </li>
        <li>
            <form asp-area=" " asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logga ut</button>
            </form>
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Logga in</a></li>
    </ul>
}
