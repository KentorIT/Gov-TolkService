@using Microsoft.AspNetCore.Identity
@using Tolk.BusinessLogic.Entities
@using System.Security.Claims
@using Tolk.Web.Authorization
@inject SignInManager<AspNetUser> SignInManager
@inject Tolk.Web.Services.SelectListService SelectListService
@if (SignInManager.IsSignedIn(User))
{
    string infoTextUser = User.IsInRole(Roles.Impersonator) && !string.IsNullOrWhiteSpace(User.FindFirstValue(TolkClaimTypes.ImpersonatingUserName)) ? "Inloggad SystemAdmin: " + User.FindFirstValue(TolkClaimTypes.ImpersonatingUserName) : "Visa mitt konto";
<ul class="nav navbar-nav navbar-right">
    <li>
        <a asp-area="" asp-controller="Account" asp-action="Index" title=@infoTextUser>
            <span class="glyphicon glyphicon-user"></span> @(User.FindFirstValue(TolkClaimTypes.PersonalName) ?? User.FindFirstValue(TolkClaimTypes.ImpersonatingUserName) ?? User.FindFirstValue(ClaimTypes.Name))
        </a>
    </li>
    @if (!User.IsInRole(Roles.Impersonator))
    {
        <li>
            <form asp-area=" " asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
                <button type="submit" class="btn-logout">Logga ut</button>
            </form>
        </li>
    }
    @await Html.PartialAsync("_TimeTravelPartial")
    @if (User.IsInRole(Roles.Impersonator))
    {
        <li class="dropdown">
            <a title="Logga ut" class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-cog"></span> <span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li>
                    <form id="impersonation-form" asp-area="" asp-controller="Account" asp-action="Impersonate" method="post" class="navbar-form navbar-right">
                        <div class="form-group">
                            <select name="UserId" id="impersonation-select" asp-items="SelectListService.ImpersonationList" class="form-control" data-ays-ignore="true"></select>
                        </div>
                    </form>
                </li>
                <li>
                    <form asp-area=" " asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
                        <button type="submit" class="btn btn-default">Logga ut</button>
                    </form>
                </li>
            </ul>
        </li>
    }
</ul>
}

