@model Tolk.Web.Models.ConfirmDialogModel
<div id="@Model.Id" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Model.DialogHeader</h4>
            </div>
            <div class="modal-body">
                <form id="@string.Concat(Model.Id, "Form")" method="post" asp-action="@Model.Action">
                    <display-entry asp-for="Message" />
                    <button type="submit" class="btn btn-default">@Model.BtnTextConfirm</button>
                    <button type="button" class="btn btn-default pull-right" data-dismiss="modal">@Model.BtnTextDeny</button>
                </form>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>
