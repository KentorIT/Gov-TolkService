@using Tolk.Web.Authorization
@using Microsoft.AspNetCore.Authorization
@using Tolk.BusinessLogic.Services
@using Tolk.Web.Helpers
@inject IAuthorizationService AuthorizationService
@inject Tolk.BusinessLogic.Services.ISwedishClock Clock

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tolk.Web</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/select2/dist/css/select2.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
    </environment>
    <link rel="stylesheet" href="~/lib/bootstrap-datepicker/bootstrap-datepicker3.min.css" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Hem</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @if ((await AuthorizationService.AuthorizeAsync(User, Policies.Customer)).Succeeded)
                    {
                        <li><a asp-area="" asp-controller="Order" asp-action="Add">Avropa tolk</a></li>
                        <li><a asp-area="" asp-controller="Order" asp-action="List">Sök avrop</a></li>
                        <li><a asp-area="" asp-controller="Requisition" asp-action="List">Sök rekvisitioner</a></li>
                    }
                    @if ((await AuthorizationService.AuthorizeAsync(User, Policies.Broker)).Succeeded)
                    {
                        <li><a asp-area="" asp-controller="Request" asp-action="List">Sök förfrågningar</a></li>
                    }
                    @if ((await AuthorizationService.AuthorizeAsync(User, Policies.Interpreter)).Succeeded)
                    {
                        <li><a asp-area="" asp-controller="Assignment" asp-action="List">Sök tilldelningar</a></li>
                    }
                </ul>
                @if((await AuthorizationService.AuthorizeAsync(User, Policies.TimeTravel)).Succeeded)
                {
                    <ul class="navbar-nav nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <span id="now" data-timetravel-milliseconds="@(((TimeTravelClock)Clock).TimeTravelTicks/10000)"></span>
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <form asp-controller="Home" asp-action="TimeTravel">
                                        <div class="form-group">
                                            <div id="timeTravelDatePicker" class="datepicker"></div>
                                            <input id="timeTravelDate" name="date" type="hidden" />
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group time">
                                                <input name="time" class="form-control" placeholder="HH:MM" data-val-regex-pattern="^(([0-1]?[0-9])|(2[0-3])):[0-5][0-9]$" data-val-regex="Ange tid som HH:MM" />
                                                <div class="input-group-addon"><span class="glyphicon glyphicon-time"></span></div>
                                                <span class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-inline">
                                            <button name="Action" value="Jump" class="btn btn-success" type="submit">Hoppa i tiden!</button>
                                            <button name="Action" value="Reset" class="btn btn-default pull-right">Återställ</button>
                                        </div>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                }
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>
                <div class="row">
                    <div class="col-lg-10">
                        &copy; 2018 - Kammarkollegiet
                        <small>(Version @GitHelper.Version)</small>
                    </div>
                    <div class="col-lg-2">
                        <a asp-area="" asp-controller="Home" asp-action="About">Om Applikationen</a>
                    </div>
                </div>
            </p>
        </footer>
    </div>
    @*<script type="text/javascript">tolkBaseUrl = "@Url.Content("~")"</script>*@
    <script type="text/javascript">tolkBaseUrl = "/"</script>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/bootstrap-datepicker/bootstrap-datepicker.js"></script>
        <script src="~/lib/bootstrap-datepicker/bootstrap-datepicker.sv.min.js"></script>
        <script src="~/lib/jquery-sortable/jquery-sortable.js"></script>
        <script src="~/lib/select2/dist/js/select2.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/lib/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
        <script src="~/lib/jquery-sortable/jquery-sortable.min.js"></script>
        <script src="~/lib/bootstrap-datepicker/bootstrap-datepicker.sv.min.js"></script>
        <script src="~/lib/select2/dist/js/select2.min.js"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
